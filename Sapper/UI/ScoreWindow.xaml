<Window x:Class="Sapper.UI.ScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sapper.UI"
        mc:Ignorable="d"
        Title="ScoreWindow" Height="300" Width="300">
    <Grid>
        <Button x:Name="btn_save" Content="Save And Close" HorizontalAlignment="Left" Margin="178,239,0,0" VerticalAlignment="Top" Width="104" Click="btn_save_Click"/>
        <Button x:Name="btn_close" Content="Close" HorizontalAlignment="Left" Margin="98,239,0,0" VerticalAlignment="Top" Width="75" Click="btn_close_Click"/>
        <Label x:Name="lb_gamelvl" Content="Game lvl" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lb_gameTime" Content="Game Time" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lb_gameScore" Content="Game Score" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
